{
  "name": "sqlite-worker",
  "version": "0.3.1",
  "description": "A simple, and persistent, SQLite database for Web and Workers",
  "main": "./cjs/index.js",
  "scripts": {
    "build": "npm run import && npm run cjs && npm run rollup:es && npm run worker",
    "import": "cp node_modules/sql.js/dist/sql-wasm.{js,wasm} dist/",
    "cjs": "ascjs --no-default esm cjs && npm run cjs:fix",
    "cjs:fix": "sed -i 's/const library = .*/const library = __filename;/' cjs/index.js && sed -i 's/const {url} = .*/const {url} = {url: __filename};/' cjs/init.js",
    "rollup:es": "rollup --config rollup/es.config.js",
    "worker": "terser esm/worker.js --module -c -m -o dist/worker.js"
  },
  "keywords": [
    "sqlite",
    "persistent",
    "indexeddb",
    "worker"
  ],
  "author": "Andrea Giammarchi",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "ascjs": "^4.0.3",
    "rollup": "^2.36.1",
    "rollup-plugin-terser": "^7.0.2",
    "sql.js": "^1.4.0",
    "terser": "^5.5.1"
  },
  "module": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "default": "./cjs/index.js"
    },
    "./init": {
      "import": "./esm/init.js",
      "default": "./cjs/init.js"
    },
    "./worker": {
      "import": "./esm/worker.js",
      "default": "./cjs/worker.js"
    },
    "./package.json": "./package.json"
  },
  "unpkg": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/sqlite-worker-.git"
  },
  "bugs": {
    "url": "https://github.com/WebReflection/sqlite-worker-/issues"
  },
  "homepage": "https://github.com/WebReflection/sqlite-worker-#readme",
  "dependencies": {
    "sqlite-tag": "^1.1.0"
  }
}
